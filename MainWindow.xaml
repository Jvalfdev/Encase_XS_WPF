                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Button Grid.Column="0" Grid.Row="0" Content="Izquierda-Arriba"/>
                                        <Button Grid.Column="1" Grid.Row="0" Content="Centro-Arriba"/>
                                        <Button Grid.Column="2" Grid.Row="0" Content="Derecha-Arriba"/>
                                        <Button Grid.Column="0" Grid.Row="1" Content="Izquierda-Centro"/>
                                        <Button Grid.Column="1" Grid.Row="1" Content="Centro-Centro"/>
                                        <Button Grid.Column="2" Grid.Row="1" Content="Derecha-Centro"/>
                                        <Button Grid.Column="0" Grid.Row="2" Content="Izquierda-Abajo"/>
                                        <Button Grid.Column="1" Grid.Row="2" Content="Centro-Abajo"/>
                                        <Button Grid.Column="2" Grid.Row="2" Content="Derecha-Abajo"/>
                                    </Grid>
                                </GroupBox>
                                <Separator DockPanel.Dock="Top"/>
                                <GroupBox Header="Alineación" DockPanel.Dock="Top">
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox Content="Izquierda"></CheckBox>
                                        <CheckBox Content="Centro"></CheckBox>
                                        <CheckBox Content="Derecha"></CheckBox>
                                    </StackPanel>
                                </GroupBox>
                                <Separator DockPanel.Dock="Top"/>
