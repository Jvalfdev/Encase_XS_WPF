                                            <ComboBox >
                                                <ComboBoxItem IsSelected="True" Content="Arial"/>
                                                <ComboBoxItem Content="Calibri"/>
                                                <ComboBoxItem Content="Courier New"/>
                                                <ComboBoxItem Content="Times New Roman"/>
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Name="sel_font_size" HorizontalAlignment="Center" Margin="5">
                                            <TextBlock Text="Tamaño" FontSize="12" Name="Tamaño_Letra_Objeto"/>
                                            <xctk:IntegerUpDown/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Name="sel_neg_curs" Margin="5" HorizontalAlignment="Center">
                                            <CheckBox Content="Negrita"></CheckBox>
                                            <CheckBox Content="Cursiva"></CheckBox>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Name="border_thin_selector" HorizontalAlignment="Center" Margin="5" Visibility="Hidden">
                                            <TextBlock Text="Grosor de cajeado: "/>
                                            <ComboBox >
                                                <ComboBoxItem IsSelected="True" Content="1" Name="border_thin_1" Selected="border_thin_1_Selected"/>
                                                <ComboBoxItem Content="2" Name="border_thin_2" Selected="border_thin_2_Selected"/>
                                                <ComboBoxItem Content="3" Name="border_thin_3" Selected="border_thin_3_Selected"/>
                                                <ComboBoxItem Content="4" Name="border_thin_4" Selected="border_thin_4_Selected"/>
                                                <ComboBoxItem Content="5" Name="border_thin_5" Selected="border_thin_5_Selected"/>
                                            </ComboBox>
                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>
                                <Separator DockPanel.Dock="Top"/>
                                <GroupBox Header="Propiedades">
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                            <TextBlock Text="Texto: " FontSize="12"/>
                                            <TextBox Name="Text_tb" TextChanged="Text_tb_TextChanged"  Width="70"
                                                     KeyDown="Text_tb_KeyDown" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                            <TextBlock Text="ID" FontSize="12"/>
                                            <xctk:IntegerUpDown/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                            <TextBlock Text="Campo" FontSize="12"/>
                                            <ComboBox>
                                                <ComboBoxItem Content="line.SaleForm"/>
                                                <ComboBoxItem Content="line.ItemName"/>
                                                <ComboBoxItem Content="line.Description"/>
                                                <ComboBoxItem Content="line.NutritionalInfo"/>
                                                <ComboBoxItem Content="line.TraceInfo"/>
                                                <ComboBoxItem Content="line.Units"/>
                                                <ComboBoxItem Content="line.Price"/>
                                                <ComboBoxItem Content="line.Weight"/>
                                                <ComboBoxItem Content="line.Amount"/>
                                                <ComboBoxItem Content="line.OffDescription"/>
                                                <ComboBoxItem Content="line.OffImport"/>
                                                <ComboBoxItem Content="line.PackingDate"/>
                                                <ComboBoxItem Content="line.ExpiringDate"/>
                                                <ComboBoxItem Content="line.PreferingDate"/>
                                                <ComboBoxItem Content="line.Lote"/>
                                                <ComboBoxItem Content="line.Order"/>
                                                <ComboBoxItem Content="total.Weight"/>
                                                <ComboBoxItem Content="total.Amount"/>
                                                <ComboBoxItem Content="total.Units"/>
                                                <ComboBoxItem Content="total.Operations"/>
                                                <ComboBoxItem Content="header.Text"/>
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                            <TextBlock Text="Tipo" FontSize="12"/>
                                            <ComboBox>
                                                <ComboBoxItem Content="Logo" IsSelected="True"/>
                                                <ComboBoxItem Content="Sello"/>
                                                <ComboBoxItem Content="Codigo de barras"/>
                                                <ComboBoxItem Content="Cajeado"/>
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                            <TextBlock Text="Código de barras" FontSize="12"/>
                                            <ComboBox>
                                                <ComboBoxItem Content="EAN-8" IsSelected="True"/>
                                                <ComboBoxItem Content="EAN-13"/>
                                                <ComboBoxItem Content="EAN-14"/>
                                                <ComboBoxItem Content="Code39"/>
                                                <ComboBoxItem Content="Code128"/>
                                            </ComboBox>
                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>
                            </DockPanel>
                        </TabItem>
