                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                            <TextBlock Text="Orientación" FontSize="12"/>
                                            <ComboBox Text="0" FontSize="12" SelectionChanged="ComboBox_SelectionChanged">
                                                <ComboBoxItem IsSelected="True" Content="Horizontal" Name="LabelHorizontal" Selected="LabelHorizontal_Selected"/>
                                                <ComboBoxItem Content="Vertical" Name="LabelVertical" Selected="LabelVertical_Selected"/>
                                            </ComboBox>
                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>
                                <Separator DockPanel.Dock="Top"/>
                                <GroupBox Header="Posición" DockPanel.Dock="Top">
