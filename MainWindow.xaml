                        <TabItem Header="Documento">
                            <DockPanel>
                                <GroupBox DockPanel.Dock="Top">
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                            <TextBlock Text="Nombre: " FontSize="12"/>
                                            <TextBox Name="Nombre_Tipo_Documento" Width="100"/>
                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>
                                <Separator DockPanel.Dock="Top"/>
                                <GroupBox Header="Geometría" DockPanel.Dock="Top">
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                            <TextBlock Text="Ancho: " FontSize="12"/>
                                            <xctk:UIntegerUpDown Text="0" Name="Document_Width" ValueChanged="Document_Width_ValueChanged"/>
