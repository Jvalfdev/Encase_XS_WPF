<Window x:Class="Encase_XS_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:diag="http://mindfusion.eu/diagramming/wpf"
        xmlns:local="clr-namespace:Encase_XS_WPF"
        xmlns:rulerControl="clr-namespace:RulerControl.Wpf;assembly=RulerControl.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1280" HorizontalContentAlignment="Stretch"  VerticalContentAlignment="Stretch" WindowState="Maximized" 
        KeyDown="Window_KeyDown">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/RulerControl.Wpf;component/RulerStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="GroupBox" BasedOn="{StaticResource {x:Type GroupBox}}">
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="Margin" Value="0 10"/>
                <Setter Property="Padding" Value="10"/>
            </Style>

            <Style x:Key="HearderTextboxStyle" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                <Setter Property="DockPanel.Dock" Value="Left"/>
                <Setter Property="Width" Value="100"/>
            </Style>
        </ResourceDictionary>

    </Window.Resources>  
    
    <Grid Margin="0,0,0,7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" MinHeight="70"></RowDefinition>
            <RowDefinition Height="494*" ></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Margin="2,2,2,2">
            <DockPanel Height="40">
                <Border >
                    <Menu DockPanel.Dock="Top" HorizontalAlignment="Left">
                        <MenuItem Header="_Archivo" FontSize="20">
                            <MenuItem Header="_Nuevo" Name="Nuevo" Click="Nuevo_Click"/>
                            <MenuItem Header="_Abrir" Name="Abrir" Click="Abrir_Click"/>
                            <MenuItem Header="_Guardar" Name="Guardar" Click="Guardar_Click"/>
                            <Separator />
                            <MenuItem Header="_Salir" Name="Salir" Click="Salir_Click"/>
                        </MenuItem>
                        <MenuItem  Header="Objeto" FontSize ="20">
                            <MenuItem Header="_Añadir">
                                <MenuItem Header="Label" Click="Add_Texto_Click"/>
                                <MenuItem Header="Campo" Click="Add_Campo_Click"/>
                                <MenuItem Header="Cajeado" Click="Add_Cajeado_Click"/>
                                <MenuItem Header="Imagen" Click="Add_Imagen_Click"/>
                                <MenuItem Header="Sello" Click="Add_Sello_Click"/>
                                <MenuItem Header="Código de barras" Click="Add_Barcode_Click"/>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="_Eliminar"></MenuItem>
                        </MenuItem>
                    </Menu>

                </Border>
            </DockPanel>
            <DockPanel Height="50">
                <Border>
                    <ToolBar Margin="0,-10,0,10">
                        <Button Content="Nueva Etiqueta" Name="Nueva_Etiqueta" Click="Nueva_Etiqueta_Click"/>
                        <Button Content="Abrir Etiqueta" Name="Abrir_Etiqueta" Click="Abrir_Etiqueta_Click"/>
                        <Button Content="Guardar Etiqueta" Name="Guardar_Etiqueta" Click="Guardar_Etiqueta_Click"/>
                        <!--Botones relacionados con el diseño que en un fututo podrían implementarse-->
                        <!--<Separator/>
                        <Button Content="Añadir Diseño" Name="Add_Design" Click="Add_Design_Click"/>
                        <Button Content="Eliminar Diseño" Name="Delete_Design" Click="Delete_Design_Click" />-->
                        <Separator/>
                        <Button Content="Añadir Texto" Name="Add_Texto" Click="Add_Texto_Click" />
                        <Button Content="Añadir Campo" Name="Add_Campo" Click="Add_Campo_Click" />
                        <Button Content="Añadir Cajeado" Name="Add_Cajeado" Click="Add_Cajeado_Click"/>
                        <Button Content="Añadir Logo" Name ="Add_Imagen" Click="Add_Imagen_Click" />
                        <Button Content="Añadir Sello" Name="Add_Sello" Click="Add_Sello_Click"/>
                        <Button Content="Añadir Código de barras" Name="Add_Barcode" Click="Add_Barcode_Click"/>
                        <Separator/>
                    </ToolBar>
                </Border>
            </DockPanel>
        </StackPanel>
        <ScrollViewer Grid.RowSpan="2" Grid.Column="1" Grid.Row="1">
            <StackPanel Grid.Column="1" Background="LightSlateGray" Margin="0,0,0,0" Grid.RowSpan="2">
                <Border  BorderThickness="1"  Grid.Column="1">
                    <TabControl TabStripPlacement="Top">
                        <TabItem Header="Objeto">
                            <DockPanel>
                                <GroupBox Header="Geometría" DockPanel.Dock="Top">
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                            <TextBlock Text="Ancho: " FontSize="12"/>
                                            <xctk:UIntegerUpDown Text="0" Name="Ancho_Objeto" ValueChanged="Ancho_Objeto_ValueChanged"/>
                                            <TextBlock Text="mm" FontSize="12"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                            <TextBlock Text="Alto: " FontSize="12"/>
                                            <xctk:UIntegerUpDown Text="0" Name="Alto_Objeto" ValueChanged="Alto_Objeto_ValueChanged"/>
                                            <TextBlock Text="mm" FontSize="12"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                            <TextBlock Text="X: " FontSize="12"/>
                                            <xctk:UIntegerUpDown Text="0" Name="Object_X" ValueChanged="Object_X_ValueChanged"/>
                                            <TextBlock Text="mm" FontSize="12"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                            <TextBlock Text="Y: " FontSize="12"/>
                                            <xctk:UIntegerUpDown Text="0" Name="Object_Y" ValueChanged="Object_Y_ValueChanged"/>
                                            <TextBlock Text="mm" FontSize="12"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                            <TextBlock Text="Ancho de línea" FontSize="12"/>
