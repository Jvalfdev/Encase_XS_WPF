                    <TabItem Name="Tbt1" 
                             Width="70"
                             Height="20"
                             Header="HEIGHT">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Column="1" Grid.ColumnSpan="3" >
                                <rulerControl:Ruler Height="15" MarkerControlReference="{Binding ElementName=mainView}" 
                                                Name="ruler1h"
                                                MaxValue="200" Width="1643" MaxWidth="1800"
                                                Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="5, 0, 0, 0">
                                    <rulerControl:Ruler.Resources>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                            <Setter Property="Margin" Value="5 0"/>
                                        </Style>
                                    </rulerControl:Ruler.Resources>
                                </rulerControl:Ruler>
                            </StackPanel>

                            <StackPanel Orientation="Vertical" Grid.Row="1">
                                <rulerControl:Ruler Grid.Row="1"
                                                 Name="ruler1v"
                                                 Margin="0,5,0,0"                                                 
                                                 Height="1640"
                                               
                                                 Position="Left"
                                                 MarkerControlReference="{Binding ElementName=mainView}"
                                                 MaxValue="200">
                                    <rulerControl:Ruler.Resources>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Setter Property="LineHeight" Value="11"/>
                                            <Setter Property="LineStackingStrategy" Value="BlockLineHeight"/>
                                            <Setter Property="Margin" Value="5 0"/>
                                            <Setter Property="FontSize" Value="10"/>
                                        </Style>
                                    </rulerControl:Ruler.Resources>
                                </rulerControl:Ruler>


                            </StackPanel>

                            <StackPanel Margin="10" Name="Design_Frame1" Background="CadetBlue"  Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2">
                                
                                    <Canvas x:Name="cnv1"
                                            MaxWidth="960"
                                            MaxHeight="960"
                                            ClipToBounds="true"
                                            MouseMove="cnv1_MouseMove">

                                    </Canvas>
                            </StackPanel>
                        </Grid>

